!!! 5
%html
  %head
    %title Credit Card API
    %link{rel:'stylesheet', href:'/custom.css'}
  %body
    %h1 Welcome to Credit Card API
    - if @current_user
      = "Welcome #{@current_user.username} |"
      %a{ href: '/logout' }
        logout
    - else
      %a{ href: '/login' }
        = "login |"
      %a{ href: '/register' }
        register
    = haml :flash_bar
    = yield
